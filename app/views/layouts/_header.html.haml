.container
  .row
    .col-md-10
      #wrapperHeader
        #header
          = image_tag 'virtuallibrarylogo.jpg'
 
    .col-md-2
      #greeting
        %ul
          - if current_user
            %li
              Welcome, #{current_user.name}!
            %li= link_to "Home", books_path
            %li= link_to "About", '/pages/1'
            %li= link_to "My Library", current_user
            %li= link_to "Log Out", logout_path
          - else
            %li= link_to "Log In", login_path
        #bookicon
          %div{:style => "text-align: center"}
            = image_tag 'bookicon.jpeg'
            %br/
            = link_to "Add a Book", new_book_path, class: 'btn btn-default'
