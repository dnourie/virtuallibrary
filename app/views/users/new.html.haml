.container
.row
.col-md-2.col-md-offset-4
  #joinform/
  %h3 New Member
  %p
  You must be a member of the
  %a{:href => "sanjoseatheists.com"} Atheist Community of San Jose
  to join.

  = form_for(@user) do |f|
    - if @user.errors.any?
      #error_explanation
        %h2
          = pluralize(@user.errors.count, "error")
          prohibited this user from being saved:
        %ul
          - @user.errors.full_messages.each do |msg|
            %li= msg
    .field
      = f.label :name
      %br
        = f.text_field :name
    .field
      = f.label :email
      %br
        = f.text_field :email
    .field
      = f.label :password
      %br
        = f.password_field :password
    %div
      = f.label :password_confirmation
      %br
        = f.password_field :password_confirmation

        = recaptcha_tags
    .actions
      = f.submit
  .col.md-6